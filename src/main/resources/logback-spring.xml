<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 로그 파일 저장 경로 -->
    <property name="LOG_PATH" value="c:/apluslife/logs"/>
    <property name="LOG_FILE_NAME" value="apluslife"/>

    <!-- 콘솔 로그 패턴 -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- 파일 로그 패턴 -->
    <property name="FILE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n"/>

    <!-- 콘솔 출력 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 일반 애플리케이션 로그 (매일 롤링) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE_NAME}.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 매일 자동 백업: 날짜별로 파일 생성 -->
            <fileNamePattern>${LOG_PATH}/backup/${LOG_FILE_NAME}.%d{yyyy-MM-dd}.log</fileNamePattern>

            <!-- 최대 보관 기간: 90일 -->
            <maxHistory>90</maxHistory>

            <!-- 전체 로그 파일 최대 크기: 10GB -->
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 사용자 액션 로그 전용 (매일 롤링) -->
    <appender name="USER_ACTION_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/user-action.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 매일 자동 백업: 날짜별로 파일 생성 -->
            <fileNamePattern>${LOG_PATH}/backup/user-action.%d{yyyy-MM-dd}.log</fileNamePattern>

            <!-- 최대 보관 기간: 365일 (1년) -->
            <maxHistory>365</maxHistory>

            <!-- 전체 로그 파일 최대 크기: 20GB -->
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>

        <!-- 액션 로그만 필터링 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!-- 에러 로그 전용 (매일 롤링) -->
    <appender name="ERROR_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/error.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 매일 자동 백업 -->
            <fileNamePattern>${LOG_PATH}/backup/error.%d{yyyy-MM-dd}.log</fileNamePattern>

            <!-- 최대 보관 기간: 180일 -->
            <maxHistory>180</maxHistory>

            <!-- 전체 로그 파일 최대 크기: 5GB -->
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>

        <!-- ERROR 레벨만 필터링 -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <!-- 사용자 액션 로그 Logger -->
    <logger name="com.apluslife.domain.log" level="INFO" additivity="false">
        <appender-ref ref="USER_ACTION_LOG"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Spring Framework -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.security" level="INFO"/>

    <!-- Hibernate -->
    <logger name="org.hibernate" level="INFO"/>
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>

    <!-- 애플리케이션 로그 -->
    <logger name="com.apluslife" level="DEBUG"/>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_LOG"/>
    </root>
</configuration>
